<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListExcersesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#10512b"
            android:text="BÀI TẬP"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:gravity="center_horizontal|center_vertical"
            />

        <ImageView
            android:id="@+id/detail_image"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_width="350dp"
            android:src="@drawable/boat_pose"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:layout_above="@id/butStart"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#0f5321"
            android:gravity="center_horizontal|center_vertical"
            />

        <Button
            android:id="@+id/butStart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:background="#117340"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="START"
            android:textColor="#ffffff" />


    </LinearLayout>

</RelativeLayout>